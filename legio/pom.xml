<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.intino.legio</groupId>
    <artifactId>model</artifactId>
    <version>4.0.0</version>

    <name>legio</name>
    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <tara.level>Product</tara.level>
        <tara.generation.package>io.intino.legio.graph</tara.generation.package>
        <tara.language>Proteo</tara.language>
        <tara.language.version>1.0.0</tara.language.version>
        <tara.out.language>Legio</tara.out.language>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <outputDirectory>../out/production/legio</outputDirectory>
        <testOutputDirectory>../out/test/legio</testOutputDirectory>
        <directory>../out/build/legio</directory>
        <sourceDirectory>src</sourceDirectory>
        <resources>
            <resource>
                <directory>res</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <java fork="true" className="io.intino.magritte.TaracRunner"
                                      classPath="${user.home}/.m2/repository/io/intino/magritte/builder/4.1.1/builder-4.1.1.jar:${user.home}/.m2/repository/io/intino/magritte/language/1.3.1/language-1.3.1.jar:${user.home}/.m2/repository/io/intino/magritte/io/3.0.0/io-3.0.0.jar:${user.home}/.m2/repository/com/esotericsoftware/kryo/4.0.0/kryo-4.0.0.jar:${user.home}/.m2/repository/com/esotericsoftware/reflectasm/1.11.3/reflectasm-1.11.3.jar:${user.home}/.m2/repository/org/ow2/asm/asm/5.0.4/asm-5.0.4.jar:${user.home}/.m2/repository/com/esotericsoftware/minlog/1.3.0/minlog-1.3.0.jar:${user.home}/.m2/repository/org/objenesis/objenesis/2.2/objenesis-2.2.jar:${user.home}/.m2/repository/io/intino/magritte/builder-constants/3.0.0/builder-constants-3.0.0.jar:${user.home}/.m2/repository/io/intino/configuration/1.0.0/configuration-1.0.0.jar:${user.home}/.m2/repository/io/intino/itrules/engine/1.0.0/engine-1.0.0.jar:${user.home}/.m2/repository/com/google/code/gson/gson/2.8.0/gson-2.8.0.jar:${user.home}/.m2/repository/org/antlr/antlr4-runtime/4.8/antlr4-runtime-4.8.jar">
                                    <arg path="/Users/oroncal/workspace/intino/legio/compiler-args.txt"/>
                                </java>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.12</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>gen</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>siani-maven</id>
            <name>siani-maven-releases</name>
            <url>http://artifactory.siani.es/artifactory/libs-release</url>
        </repository>
        <repository>
            <id>siani-maven-snapshot</id>
            <name>siani-maven-snapshot</name>
            <url>http://artifactory.siani.es/artifactory/libs-snapshot</url>
        </repository>
        <repository>
            <id>intino-maven</id>
            <name>intino-maven-releases</name>
            <url>https://artifactory.intino.io/artifactory/releases</url>
        </repository>
    </repositories>
    <distributionManagement>
        <repository>
            <id>intino-maven</id>
            <name>intino-maven-releases</name>
            <url>https://artifactory.intino.io/artifactory/release-libraries</url>
        </repository>
    </distributionManagement>

    <dependencies>
        <dependency>
            <groupId>io.intino.magritte</groupId>
            <artifactId>framework</artifactId>
            <version>3.0.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.intino.magritte</groupId>
            <artifactId>framework</artifactId>
            <version>3.0.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
