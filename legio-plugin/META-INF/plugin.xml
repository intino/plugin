<idea-plugin version="2">
    <id>io.intino.legio</id>
    <name>Legio</name>
    <version>1.0.1</version>
    <vendor email="legio@intino.io" url="http://www.intino.io">intino.io</vendor>

    <description><![CDATA[
        All that maven and gradle should be. Simple, easy to use, nothing intrusive.
    ]]></description>

    <depends>siani.dev.tara</depends>
    <change-notes><![CDATA[
      Added paste dependency conversion for maven dependency declaration.
      Added dependency analyzers.
    ]]>
    </change-notes>
    <idea-version since-build="143.375"/>


    <extensions defaultExtensionNs="com.intellij">
        <annotator language="Tara" implementationClass="io.intino.legio.plugin.annotators.DependencyAnnotator"/>
        <fileDocumentManagerListener
                implementation="io.intino.legio.plugin.project.ConfigurationListener"/>
        <fileTypeFactory implementation="io.intino.legio.plugin.file.LegioFileTypeFactory"/>
        <errorHandler implementation="io.intino.legio.plugin.errorreporting.LegioErrorReportSubmitter"/>
        <copyPastePreProcessor implementation="io.intino.legio.plugin.file.LegioDependencyPasteProcessor"/>
        <problemFileHighlightFilter implementation="io.intino.legio.plugin.annotators.LegioProblemFileHighlightFilter"/>
    </extensions>

    <actions>
        <group id="LegioToolsGroup" popup="true" text="Legio" class="io.intino.legio.plugin.actions.LegioActionGroup">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>
            <action id="PublishArtifact" class="io.intino.legio.plugin.actions.publish.PublishArtifactAction"
                    text="Publish Artifact..."
                    description="Publish Artifact">
                <keyboard-shortcut keymap="$default" first-keystroke="control alt E"/>
                <add-to-group group-id="LegioToolsGroup"/>
            </action>
            <action id="UpdateLanguage" class="io.intino.legio.plugin.actions.UpdateLanguageAction"
                    text="Update Language"
                    description="Update Language">
                <keyboard-shortcut keymap="$default" first-keystroke="control alt U"/>
                <add-to-group group-id="LegioToolsGroup"/>
            </action>
        <action id="JoinToLegio" class="io.intino.legio.plugin.actions.JoinToLegioAction"
                text="Join To Legio"
                description="Join module to legio or convert from maven">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action id="io.intino.legio.plugin.actions.ReloadConfigurationAction"
                class="io.intino.legio.plugin.actions.ReloadConfigurationAction" text="Reload Legio Configuration"
                description="Reload configuration of project modules">
            <add-to-group group-id="ToolbarMakeGroup" anchor="first"/>
        </action>
    </actions>

    <application-components>
        <component>
            <implementation-class>io.intino.legio.plugin.project.LegioAppComponent</implementation-class>
        </component>
    </application-components>
    <project-components>
        <component>
            <implementation-class>io.intino.legio.plugin.lifecycle.LifeCycleManager</implementation-class>
        </component>
    </project-components>
</idea-plugin>