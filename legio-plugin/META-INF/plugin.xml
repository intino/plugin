<idea-plugin version="2">
    <id>org.siani.tara.legio</id>
    <name>Legio</name>
    <version>1.0.0</version>
    <vendor email="tara@siani.es" url="http://www.siani.es">Siani</vendor>

    <description><![CDATA[

    ]]></description>

    <depends>siani.dev.tara</depends>
    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>
    <idea-version since-build="143.375"/>


    <extensions defaultExtensionNs="com.intellij">
        <fileDocumentManagerListener
                implementation="org.siani.legio.plugin.project.ConfigurationListener"/>
        <fileTypeFactory implementation="org.siani.legio.plugin.file.LegioFileTypeFactory"/>
        <errorHandler implementation="org.siani.legio.plugin.errorreporting.PluginErrorReportSubmitter"/>
    </extensions>

    <actions>
        <group id="TaraMenu" text="Tara" description="Tara Menu">
            <action id="PublishLanguage" class="org.siani.legio.plugin.actions.publish.PublishLanguageAction"
                    text="Publish Language..."
                    description="Publish Language...">
                <keyboard-shortcut keymap="$default" first-keystroke="control alt E"/>
            </action>
            <action id="PublishSnapshotLanguage"
                    class="org.siani.legio.plugin.actions.publish.PublishSnapshotLanguageAction"
                    text="Publish Snapshot Language..." description="Publish Snapshot Language...">
                <keyboard-shortcut keymap="$default" first-keystroke="control alt S"/>
            </action>
            <action id="UpdateLanguage" class="org.siani.legio.plugin.actions.UpdateLanguageAction"
                    text="Update Language"
                    description="Update Language">
                <keyboard-shortcut keymap="$default" first-keystroke="control alt U"/>
            </action>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>
    </actions>

    <application-components>
        <component>
            <implementation-class>org.siani.legio.plugin.project.LegioAppComponent</implementation-class>
        </component>


    </application-components>

</idea-plugin>